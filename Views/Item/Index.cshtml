@model List<TodoItem>


@{ 
    ViewData["Title"] = "Index"; 
}

    @if(Model.Any())
    {
        <div class="d-flex justify-content-between">
    <a asp-action="Create" class="btn btn-primary mt-3">Add a new Item</a>
    
    @* <a asp-action="DeleteAll" class ="btn btn-primary mt-3">Delete All</a> *@

    
</div>
        <h3 class = "mt-5">Your To-Do List:</h3>
        
<table class="table table-hover mt-3 ">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Description</th>
            <th>Edit Item</th>
            <th>Delete Item</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@(item.IsCompleted ? "Completed" : "Pending")</td>
            <td>@item.Description</td>
            
            @*This is only for server side*@
            @* <td>@item.CreatedAt?.ToString("g")</td>
            <td>@item.UpdatedAt?.ToString("g")</td> *@


            <td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-small">Edit</a></td>
            <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-small">Delete</a></td>
        </tr>
    }
    </tbody>
</table>

} else{
    <div class="card p-4 mb-4 shadow-sm rounded area add-item mx-auto mt-5">
        <h4 class=text-muted>@ViewBag.Message</h4>
        <p class="text-light">Get started by adding an item to your list</p>
        <a asp-action="Create" class="btn btn-primary mt-3">Add a new Item</a>
    </div>

    }

  
